#include <iostream>
using namespace std;

int main()
{
    int n, sum = 0;
    cout << "How many numbers do you want to add ";
    cin >> n;
    int arr[n];
    cout << "\nEnter numbers: ";
    for (int i = 0; i < n; i++)
        cin >> arr[i];
    for (int i = 0; i < n; i++)
        sum += arr[i];
    cout << "\nSum is: " << sum << endl;
    return 0;
}
